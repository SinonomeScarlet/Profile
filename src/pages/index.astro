---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="SinonomeScarlet's Profile" description="SinonomeScarletのプロフィール">
	<main>
		<h1 class="text-gradient">SinonomeScarlet's Profile</h1>
