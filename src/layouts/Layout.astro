---
interface Props{title:string;description:string;url:string}
const {title,description,url} = Astro.props;
---

<!doctype html>
<html lang="ja" prefix="og: https://ogp.me/ns#">
	<head>
		<!-- DEFAULT -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="format-detection" content="telephone=no,email=no,address=no" />
		<link rel="icon" type="shortcut image/x-icon" href="./favicon.ico" />
		<link rel="canonical" href="https://profile.sinonomenetwork.jp/" />
		<!-- Windows -->
		<meta name="msapplication-config" content="./browserconfig.xml" />
		<!-- Apple -->
		<link rel="apple-touch-icon" sizes="512x512" href="./img/favicon.png" />
		<!-- Android -->
		<meta name="theme-color" content="#3cb371" />
		
		<!-- SITEMETA -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content="SinonomeNetwork, SinonomeScarlet, 東雲スカーレット" />
		<meta name="author" content="SinonomeScarlet" />
		<meta name="copyright" content="© SinonomeNetwork" />
		<meta name="generator" content={Astro.generator} />

		<!-- OGP -->
		<meta property="og:site_name" content="SinonomeNetwork" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="profile" />
		<meta property="og:url" content={url} />
		<meta property="og:image" content="https://profile.sinonomenetwork.jp/img/og_image.jpg" />
		<meta name="thumbnail" content="https://profile.sinonomenetwork.jp/img/og_image.jpg" />
		<meta property="og:locale" content="ja_JP" />
		<!-- Twitter OGP -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:url" content={url} />
		<meta name="twitter:image" content="https://profile.sinonomenetwork.jp/img/og_image.jpg" />
		<meta name="twitter:domain" content="profile.sinonomenetwork.jp" />
		<meta name="twitter:creator" content="@manago0403_" />
		<meta name="twitter:site" content="@manago0403_" />
		<!-- FaceBook OGP -->
		<meta property=”fb:app_id” content=”968631567683459” />
	</head>
	<body>
		<slot/>
	</body>
</html>
<style is:global>
	:root{
		--accent:0,255,154;
		--accent-light:224,204,250;
		--accent-dark:66,69,73;
		--accent-gradient:linear-gradient(45deg,rgb(var(--accent)),rgb(var(--accent-light)) 30%,white 60%);
	}
	html{font-family:system-ui,sans-serif;background:#13151a;background-size:224px}
	code{
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
